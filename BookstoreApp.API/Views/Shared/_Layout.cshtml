<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Once Upon a Time a Bookshelf</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation" style="">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link navbar-brand" href="@Url.Action("Index", "Home")">Home<span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link navbar-brand" href="@Url.Action("BookCollection", "Book")">Books</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link navbar-brand" href="@Url.Action("WishlistBookCollection", "Wishlist")">Wishlist</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link navbar-brand" href="@Url.Action("ShoppingCartBookCollection", "ShoppingCart")">Shopping Cart</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link navbar-brand" href="@Url.Action("GetUserOrders", "Order")">Orders</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link navbar-brand" href="@Url.Action("Contact", "Home")">Contact Us</a>
                </li>
            </ul>

            @Html.Partial("_LoginPartial")
        </div>
    </nav>  
    <br />
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - The Lethal Meerkats, Telerik Academy Alpha 2018</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
